{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "External-Secrets Configuration",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10,
      "default": 1
    },
    "webhook": {
      "type": "object",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 1
        }
      }
    },
    "certController": {
      "type": "object",
      "properties": {
        "replicaCount": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10,
          "default": 1
        }
      }
    },
    "cloudProvider": {
      "type": "string",
      "enum": ["aws", "gcp", "azure", "none"],
      "default": "none"
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  }
}
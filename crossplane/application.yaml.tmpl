apiVersion: v1
kind: Namespace
metadata:
  name: crossplane-system
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ .ClusterName }}-crossplane
  namespace: argocd
  labels:
    konstruct.io/cluster: "{{ .ClusterName }}"
    konstruct.io/team: "{{ .TeamName | default "default" }}"
    konstruct.io/component: "crossplane"
  annotations:
    konstruct.io/created-by: "konstruct-api"
    argocd.argoproj.io/sync-wave: "60"  # Deploy for infrastructure management after platform
spec:
  project: {{ .Project | default "default" }}
  source:
    repoURL: https://charts.crossplane.io/stable
    chart: crossplane
    targetRevision: {{ .ChartVersion | default "1.16.0" }}
    helm:
      valuesObject:
        provider:
          packages:
            - {{ .Values.providerPackage | default "xpkg.upbound.io/crossplane-contrib/provider-terraform" }}:{{ .Values.providerVersion | default "v0.18.0" }}
    chart: crossplane
  destination:
    name: {{ .DestinationName | default "in-cluster" }}
    namespace: crossplane-system
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
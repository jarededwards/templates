{{- if eq .CloudProvider "aws" }}
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: crossplane-aws-creds
  namespace: crossplane-system
  annotations:
    argocd.argoproj.io/sync-wave: "10"
spec:
  refreshInterval: 60s
  secretStoreRef:
    name: {{ .SecretStoreName | default "vault-secret-store" }}
    kind: ClusterSecretStore
  target:
    name: aws-creds
  data:
  - secretKey: credentials
    remoteRef:
      key: /crossplane/aws
      property: credentials
{{- else if eq .CloudProvider "gcp" }}
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: crossplane-gcp-creds
  namespace: crossplane-system
  annotations:
    argocd.argoproj.io/sync-wave: "10"
spec:
  refreshInterval: 60s
  secretStoreRef:
    name: {{ .SecretStoreName | default "vault-secret-store" }}
    kind: ClusterSecretStore
  target:
    name: gcp-creds
  data:
  - secretKey: credentials.json
    remoteRef:
      key: /crossplane/gcp
      property: serviceAccountKey
{{- else if eq .CloudProvider "azure" }}
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: crossplane-azure-creds
  namespace: crossplane-system
  annotations:
    argocd.argoproj.io/sync-wave: "10"
spec:
  refreshInterval: 60s
  secretStoreRef:
    name: {{ .SecretStoreName | default "vault-secret-store" }}
    kind: ClusterSecretStore
  target:
    name: azure-creds
  data:
  - secretKey: credentials.json
    remoteRef:
      key: /crossplane/azure
      property: credentials
{{- end }}